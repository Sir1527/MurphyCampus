<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/order_bacground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"></View>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="待接单"
        android:textColor="#ff333333"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/jiGe"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="4dp"
        android:text="￥"
        android:textColor="#ffff0000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text=""
        android:textColor="#ffff0000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/jiGe"
        app:layout_constraintTop_toTopOf="@+id/jiGe" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="205dp"
        android:layout_height="17dp"
        android:layout_marginTop="4dp"
        android:text="任务描述"
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/ic_send_out_goods"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:srcCompat="@drawable/ic_take_delivery_of_goods"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/quJianDiZhi"
        android:layout_width="195dp"
        android:layout_height="42dp"
        android:layout_marginLeft="27dp"
        android:text="四川成都市 天府机场T2 航展2
楼13B"
        android:textColor="#ff3d3d3d"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/divider"
        app:layout_constraintStart_toStartOf="@+id/quJianDiZhi"
        app:layout_constraintTop_toBottomOf="@+id/quJianDiZhi"
        tools:src="@drawable/divider" />

    <TextView
        android:id="@+id/shouJianDiZhi"
        android:layout_width="194dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:text="四川绵阳市 绵阳校区B校区 保
安室"
        android:textColor="#ff3d3d3d"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_1"
        app:layout_constraintStart_toStartOf="@+id/shouJianDiZhi"
        app:layout_constraintTop_toBottomOf="@+id/shouJianDiZhi"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@drawable/rounded_1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        android:text="收件人:"
        android:textColor="#ff3d3d3d"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/shouJianDiZhi"
        app:layout_constraintTop_toBottomOf="@+id/shouJianDiZhi"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/shou_userName"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text=""
        android:textColor="#ff3d3d3d"
        android:textSize="13sp"

        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="9dp"
        android:text="取件人电话:"
        android:textColor="#ff3d3d3d"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/shou_userPhone"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text=""
        android:textColor="#ff3d3d3d"
        android:textSize="13sp"


        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>